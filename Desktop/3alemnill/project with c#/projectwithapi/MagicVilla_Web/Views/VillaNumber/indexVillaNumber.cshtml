@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Villa Number List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Villa" asp-action="CreateVillaNumber" class="btn btn-outline-primary">
				<i class="bi bi-plus-square-fill"></i>Create New Villa
			</a>

		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>
					Villa Name
				</th>
				<th>
					Villa Number
				</th>
				 <th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.VillaName</td>
					<td>@item.VillaNo</td>
					<td>@((item.Rate).ToString("c"))</td>
					<td>
						<a asp-controller="Villa" asp-action="UpdateVillaNumber" asp-route-villaId="@item.VillaName" class="btn btn-success ">
							<i class="bi bi-pencil-square"></i>
						</a>
						<a asp-controller="Villa" asp-action="DeleteVillaNumber" asp-route-villaId="@item.VillaNo" class="btn btn-danger ">
							<i class="bi bi-trash-fill"></i>
						</a>

					</td>
				</tr>
			}
		</tbody>
	</table>
</div>